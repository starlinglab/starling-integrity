{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "recorderMetadata": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "service": {
            "type": "string"
          },
          "info": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "values": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "image": {
                      "type": "string"
                    },
                    "repository": {
                      "type": "string"
                    },
                    "branch": {
                      "type": "string"
                    },
                    "commit": {
                      "type": "string"
                    },
                    "clean": {
                      "type": "boolean"
                    }
                  }
                }
              },
              "required": [
                "type",
                "values"
              ]
            }
          }
        },
        "required": [
          "info",
          "service"
        ]
      }
    },
    "timestamp": {
      "type": "string"
    }
  },
  "required": [
    "recorderMetadata",
    "timestamp"
  ]
}
